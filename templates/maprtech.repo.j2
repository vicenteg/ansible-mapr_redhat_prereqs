[maprtech]
name=MapR Core
baseurl=http://{{mirror_host}}/{% if beta %}beta{% else %}releases{% endif %}/{{mapr_version}}/redhat/
enabled=1
{% if mapr_version.startswith('v3') %}
gpgcheck=0
{% else %}
gpgcheck={{gpgcheck}}
{% endif %}
protect=1

[maprecosystem]
name=MapR Ecosystem
baseurl=http://{{mirror_host}}/releases/ecosystem{% if mapr_version.startswith('v4') %}-4.x{% elif mapr_version.startswith('v5') %}-5.x{% endif %}/redhat/
enabled=1
gpgcheck=0
protect=1


{% if mapr_version.startswith('v3') or mapr_version.startswith('v4') %}
[maprpatch]
name=MapR Patches
baseurl=http://{{mirror_host}}/patches/releases/{{mapr_version}}/redhat/
enabled=1
gpgcheck=1
protect=1
{% endif %}
